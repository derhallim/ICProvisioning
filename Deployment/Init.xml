<?xml version="1.0"?>
<pnp:Provisioning xmlns:pnp="http://schemas.dev.office.com/PnP/2020/02/ProvisioningSchema">

  <pnp:Preferences Generator="OfficeDevPnP.Core, Version=3.26.2010.0, Culture=neutral, PublicKeyToken=5e633289e95c321a">
    <pnp:Parameters>
      <pnp:Parameter Key="lcid">1033</pnp:Parameter>
      <pnp:Parameter Key="TemplateUrl"></pnp:Parameter>
      <pnp:Parameter Key="TemplateTitle"></pnp:Parameter>
    </pnp:Parameters>
  </pnp:Preferences>

  <!-- ================================================ Uncomment this when going to prod  -->


   <pnp:Tenant>
    <pnp:AppCatalog>
      <pnp:Package Src=".\spfx\office-profile.sppkg" Action="UploadAndPublish" SkipFeatureDeployment="false" Overwrite="true"/>

    </pnp:AppCatalog>

    <pnp:WebApiPermissions>
      <pnp:WebApiPermission Resource="Microsoft.Graph" Scope="Directory.AccessAsUser.All"/>
    </pnp:WebApiPermissions>
   
   
  </pnp:Tenant>


  <pnp:Sequence ID="MAIN-SEQUENCE">

    <pnp:SiteCollections>

      <pnp:SiteCollection xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="pnp:CommunicationSite" ProvisioningId="HomeSite" HubSiteTitle="MyBDO" IsHubSite="true" Url="{parameter:HomeSiteUrl}" Title="{parameter:HomeSiteTitle}" Owner="{currentuserloginname}" Description="MyBDO Home Site" Language="{parameter:lcid}">
      </pnp:SiteCollection>

    </pnp:SiteCollections>

  </pnp:Sequence>
</pnp:Provisioning>